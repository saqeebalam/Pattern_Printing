package SolidPattern;

public class Delete {
	public static void main(String[] args) {
		
		/*
	     *
	    **
	   ***
	  ****  
	   here we will to for loop inside outer loop 
	   1st loop is used for space
	   2nd loop used for * prints */
  int n=4;
	for(int i=1;i<=n;i++) {
		for(int j=1;j<=n-i;j++) {
			System.out.print(" ");
		}
		for(int j=1;j<=i;j++) {
			System.out.print("*");
		}
		System.out.println();
	}
		
	}

}
